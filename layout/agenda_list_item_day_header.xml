    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mz_group_top_header_minHeight"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/text_color_gray"
        android:paddingLeft="@dimen/list_content_full_padding"
        android:paddingRight="@dimen/list_content_full_padding"
        android:gravity="left|center_vertical"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dip"
        android:background="@drawable/mz_card_new_list_divider" />
</LinearLayout>