<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.meizu.common.widget.RoundCornerImageView
        android:layout_width="54dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/movie_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Small Text"
        android:id="@+id/movie_name"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/movie_icon"
        android:layout_above="@+id/movie_time"
        android:layout_alignEnd="@+id/movie_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/movie_time"
        android:layout_alignBottom="@+id/movie_action"
        android:layout_alignEnd="@+id/movie_desc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/movie_desc"
        android:layout_below="@+id/movie_time"
        android:layout_alignBottom="@+id/movie_icon"
        android:layout_alignEnd="@+id/movie_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/movie_counts"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <com.meizu.common.widget.CircularProgressButton
        android:id="@+id/movie_action"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:focusable="false"
        android:text="订阅"
        android:textColor="@color/color_firebrick"
        style="@style/ButtonSubscribe.Recommend"
        android:layout_below="@+id/movie_counts"
        android:layout_alignStart="@+id/movie_counts" />
</RelativeLayout>