<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.meizu.common.widget.RoundCornerImageView
        android:layout_width="100dp"
        android:layout_height="73dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/show_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Small Text"
        android:id="@+id/show_name"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/show_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/show_desc"
        android:layout_below="@+id/show_name"
        android:layout_alignStart="@+id/show_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/show_counts"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <com.meizu.common.widget.CircularProgressButton
        android:layout_marginEnd="30dp"
        android:id="@+id/show_action"
        android:layout_alignBottom="@+id/show_desc"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:text="订阅"
        android:textColor="@color/color_firebrick"
        style="@style/ButtonSubscribe.Recommend"/>
</RelativeLayout>