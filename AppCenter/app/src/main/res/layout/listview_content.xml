<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <!--<include android:id="@+id/sdfs" layout=""/>-->
    <!--<include android:id="@+id/sdfs" layout=""/>-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/imageViewL"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:text="文件名"
        android:id="@+id/filename"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewL"
        android:layout_toEndOf="@+id/imageViewL"
        android:layout_toLeftOf="@+id/download"
        android:textSize="30px"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:text="类型"
        android:id="@+id/type"
        android:layout_toEndOf="@+id/imageViewL"
        android:textSize="30px"
        android:layout_below="@+id/filename"
        android:layout_toLeftOf="@+id/download"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="等级"
        android:id="@+id/level"
        android:layout_alignBottom="@+id/imageViewL"
        android:layout_toRightOf="@+id/imageViewL"
        android:layout_toEndOf="@+id/imageViewL"
        android:layout_alignTop="@+id/downloadnum" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="下载数"
        android:id="@+id/downloadnum"
        android:layout_below="@+id/type"
        android:layout_toEndOf="@+id/level"
        android:layout_toLeftOf="@+id/download"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:id="@+id/download"
        android:textSize="30px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>


</RelativeLayout>
