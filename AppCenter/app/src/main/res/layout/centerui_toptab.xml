<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tab_text_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="精选"
                android:textSize="25dp"
                android:paddingRight="8dip"
                android:paddingLeft="8dip"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:clickable="true"
                 />

            <ImageView
                android:id="@+id/scroll_1"
                android:layout_width="wrap_content"
                android:layout_height="3dip"
                android:background="@drawable/view_pager_scroll"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/tab_text_1"
                android:layout_alignRight="@id/tab_text_1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tab_text_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="排行"
                android:textSize="25dp"
                android:paddingRight="8dip"
                android:paddingLeft="8dip"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:clickable="true"
                />

            <ImageView
                android:id="@+id/scroll_2"
                android:layout_width="wrap_content"
                android:layout_height="3dip"
                android:background="@drawable/view_pager_scroll"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/tab_text_2"
                android:layout_alignRight="@id/tab_text_2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tab_text_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="新品"
                android:textSize="25dp"
                android:paddingRight="8dip"
                android:paddingLeft="8dip"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:clickable="true"
                 />

            <ImageView
                android:id="@+id/scroll_3"
                android:layout_width="wrap_content"
                android:layout_height="3dip"
                android:background="@drawable/view_pager_scroll"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/tab_text_3"
                android:layout_alignRight="@id/tab_text_3" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tab_text_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="专题"
                android:textSize="25dp"
                android:paddingRight="8dip"
                android:paddingLeft="8dip"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:clickable="true"
                 />

            <ImageView
                android:id="@+id/scroll_4"
                android:layout_width="wrap_content"
                android:layout_height="3dip"
                android:background="@drawable/view_pager_scroll"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/tab_text_4"
                android:layout_alignRight="@id/tab_text_4" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:src="#2db5e5" />

</RelativeLayout>
